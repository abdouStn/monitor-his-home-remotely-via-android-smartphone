<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.quentin.rapace_v1.Activity.Alert"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/android_logo2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="-40dp"

        android:src="@drawable/rapace"

        android:layout_weight="0.12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/text_alert"
        android:text="@string/alert_text"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="79dp"
        android:textColor="#ff320307"
        android:layout_below="@+id/android_logo2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bouton_voir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="voir"
        android:layout_marginBottom="98dp"
        android:background="#ffff8c6d"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
