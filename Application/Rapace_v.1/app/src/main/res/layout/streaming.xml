<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Lecture_Streaming"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/android_logo2"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:padding="-40dp"

        android:src="@drawable/rapace"

        android:layout_weight="0.12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Lecture video:"
        android:layout_gravity="center"
        android:textStyle="bold"/>

    <VideoView
        android:layout_width="wrap_content"
        android:id="@+id/video"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp" />

<!--
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
-->
    <Button
        android:id="@+id/stop_an_alert_button"
        android:text="@string/stop_an_alert"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcfe6ff"
        android:layout_marginBottom="2dp" />

    <Button
        android:id="@+id/call_police"
        android:text="@string/call_police"
        android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffcfe6ff"
        android:layout_marginBottom="2dp" />


</LinearLayout>
